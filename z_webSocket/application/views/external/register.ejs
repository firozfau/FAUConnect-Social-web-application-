<%-include("layouts/header")%>

<% 
let error_data=false; 
let error_message=false; 

 if (messages[0] !==undefined)
  {
     if (messages[0].register_error !==undefined) 
     {
        if(messages[0].register_error.status ==false) 
        {
            error_data=messages[0].register_error.data;
           error_message= messages[0].register_error.message;
        }
    } 
} 
    

%>
    <div style="width: 800px; margin: 0 auto;">
        <form action="" id="userRegistraionForm"  method="post" enctype="multipart/form-data">
            <div class="container">
                <h1>Register</h1>
                <p>Please fill in this form to create an account.</p>
                <hr>

                <label for="first name "><b>First name </b></label>
                <input type="text" placeholder="Full name " name="first_name" id="first_name" required>

                <label for="last name "><b>Last name </b></label>
                <input type="text" placeholder="Last name " name="last_name" id="last_name" required>


                <label for="email"><b>Email</b></label>
                <input type="text" placeholder="Enter Email" name="email" id="email" required>

                <label for="email"><b>Gender </b></label>
                <select name="gender">
                    <option value="1">Male</option>
                    <option value="2">Female</option>
                    <option value="3">Others</option>
                </select>  

                <label for="dob"><b>Dage of birth</b></label>
                <input type="text" placeholder="Enter date of birth" name="dob" id="dob" required>

                <label for="department"><b>Department </b></label>
                <select name="department">
                    <option value="1">English </option>
                    <option value="2">Data science </option>
                    <option value="3">Business logic</option>
                </select>
 
                <label for="current position"><b>Current  position </b></label>
                <select name="current_position" id="current_position">
                    <option value="1">Professor </option>
                    <option value="2">PHP student </option>
                    <option value="3">Masters studnet </option>
                    <option value="4">LAB assistent </option>
                </select>

                <label for="image"><b>User photo </b></label>
                <input type="file" name="userphoto" id="userphoto" required>
                
                </br></br></br>
                <label for="user name"><b>User name </b></label>
                <input type="text" placeholder="Enter User name" name="username" id="username" required>

                <label for="Passwoard"><b>Password</b></label>
                <input type="password" placeholder="Enter password" name="password" id="password" required>

               
                <hr>
                <p>By creating an account you agree to our <a href="#">Terms & Privacy</a>.</p>

                <button type="button" id="userRegistrationbutton" class="registerbtn">Register</button>
            </div>

            <div class="container signin">
                <p>Already have an account? <a href="/user-login">Sign in</a>.</p>
            </div>
        </form>
    </div>
    <%-include("layouts/footer")%>